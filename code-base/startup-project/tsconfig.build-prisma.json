{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "prisma/generated",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "prisma/generated"
  ],
  "exclude": [
    "node_modules",
    "src",
    "dist",
    "**/*.config.*",
    "**/*.test.ts"
  ]
}